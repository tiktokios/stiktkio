---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";
---



<div class="relative p-8">
    <div class="max-w-7xl mx-auto">
	
		<h2 class="mt-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">{t("features.howto")} <span class="bg-[url('/images/rectangle-bg.svg')] bg-cover bg-center px-4 text-white">{t("features.wowm")}</span></h2>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">{t("features.howtotext")}</p>
		<h3 class="mt-4 text-xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-xl">{t("features.title_search")} <span class="bg-[url('/images/rectangle-bg.svg')] bg-cover bg-center px-4 text-white">{t("features.title_search_tiktok")}</span> {t("features.title_copy_tiktok")}</h3>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">{t("features.search_text")}</p>	

    </div>
    <div class="max-w-7xl mx-auto">
		<h3 class="mt-4 text-xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-xl">{t("features.link_paste")} <span class="bg-[url('/images/rectangle-bg.svg')] bg-cover bg-center px-4 text-white">{t("features.title_search_tiktok")}</span>{t("features.linkpaste")}</h3>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">{t("features.search_text")}</p>
    </div>

    <div class="max-w-7xl mx-auto">
		
		<h3 class="mt-4 text-xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-xl">{t("features.select_format")} <span class="bg-[url('/images/rectangle-bg.svg')] bg-cover bg-center px-4 text-white">{t("features.format_down")}</span></h3>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">{t("features.formate_text")} <a href="/" class="group">{t("features.format_text_link")}</a> {t("features.formate_text2")}</p>
   </div>

	
   </div>
</div>
